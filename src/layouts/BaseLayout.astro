---
/**
 * BaseLayout.astro
 * Layout principal do site - envolve todas as páginas
 * Inclui: meta tags, fontes, estilos globais, header e footer
 */

import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

interface Props {
  title: string;
  description?: string;
  showNav?: boolean;
}

const {
  title,
  description = "Curso de Antimicrobianos para Residentes em Pediatria - HRT",
  showNav = true
} = Astro.props;

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="author" content="Dr. Iúri Almeida">

  <!-- Favicon (placeholder - substituir depois) -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Preconnect para fontes -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <title>{title} | Curso de Antimicrobianos</title>
</head>

<body>
  <!-- Skip link para acessibilidade de teclado -->
  <a href="#main-content" class="skip-link">Pular para conteúdo principal</a>

  {showNav && (
    <header role="banner">
      <nav class="nav-vintage" aria-label="Navegação principal">
        <ul class="nav-vintage__list">
          <li>
            <a
              href="/"
              class:list={["nav-vintage__link", { active: currentPath === "/" }]}
            >
              Início
            </a>
          </li>
          <li>
            <a
              href="/modulos"
              class:list={["nav-vintage__link", { active: currentPath.startsWith("/modulos") }]}
            >
              Módulos
            </a>
          </li>
          <li>
            <a
              href="/guia-rapido"
              class:list={["nav-vintage__link", { active: currentPath === "/guia-rapido" }]}
            >
              Guia Rápido
            </a>
          </li>
          <li>
            <a
              href="/sobre"
              class:list={["nav-vintage__link", { active: currentPath === "/sobre" }]}
            >
              Sobre
            </a>
          </li>
        </ul>
      </nav>
    </header>
  )}

  <main id="main-content">
    <slot />
  </main>

  <footer class="footer-vintage">
    <div class="footer-vintage__content">
      <p class="footer-vintage__logo">Curso de Antimicrobianos</p>
      <p class="footer-vintage__text">
        Programa de Residência Médica em Pediatria<br>
        Hospital Regional de Taguatinga (HRT)
      </p>
      <p class="footer-vintage__author">
        Dr. Iúri Almeida — Pediatra Infectologista
      </p>
      <p class="footer-vintage__text mt-lg">
        <small>&copy; {new Date().getFullYear()} — Material educacional</small>
      </p>
    </div>
  </footer>

  <!-- Vercel Analytics & Speed Insights -->
  <Analytics />
  <SpeedInsights />
</body>
</html>

<style is:global>
  @import '../styles/vintage.css';
</style>

<style>
  /* Estilos específicos do layout */
  main {
    min-height: calc(100vh - 200px);
  }

  /* Skip link para acessibilidade */
  .skip-link {
    position: absolute;
    left: -9999px;
    z-index: 999;
    background: var(--color-blood-red);
    color: var(--color-cream);
    padding: var(--space-md) var(--space-lg);
    text-decoration: none;
    font-family: var(--font-body);
    font-weight: 600;
  }

  .skip-link:focus {
    left: 0;
    top: 0;
    outline: 2px solid var(--color-gold);
    outline-offset: 2px;
  }

  .nav-vintage__link.active {
    color: var(--color-gold);
  }

  .nav-vintage__link.active::after {
    width: 100%;
  }
</style>
